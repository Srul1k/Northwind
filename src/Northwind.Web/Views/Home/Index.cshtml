@{
    ViewData["Title"] = "Home Page";
    Layout = "_SecondLayout";
}

<div class="text-center">
    <div style="padding-top: 40px">
        <img alt="logo" src="/img/logo.jpg" style="width: 318px; height: 159px;" class="rounded" />
    </div>
    <div style="padding-top: 60px">
        @if (User.Identity.IsAuthenticated)
        {
            <h1 class="display-4">Welcome, @User.Identity.Name</h1>
        }
        else
        {
            <h1 class="display-4">Greetings! Login or register to interact.</h1>
        }
        <p>You can view the source code on <a href="https://github.com/Srul1k/web-learning">GitHub</a>.</p>
    </div>
</div>
