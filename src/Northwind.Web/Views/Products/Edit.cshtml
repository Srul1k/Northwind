@model EditProductViewModel

@{
    ViewData["Title"] = "Edit product";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="input-group-sm col-sm-6">
        <label asp-for="ProductName">Product name</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName"></span>
    </div>
    <div class="input-group-sm col-sm-6">
        <label asp-for="Supplier"></label>
        <select asp-for="SupplierID" asp-items="ViewBag.Suppliers" class="form-control"></select>
    </div>
    <div class="input-group-sm col-sm-6">
        <label asp-for="Category"></label>
        <select asp-for="CategoryID" asp-items="ViewBag.Categories" class="form-control"></select>
    </div>
    <div class="input-group-sm col-sm-6">
        <label asp-for="QuantityPerUnit">Quantity per unit</label>
        <input asp-for="QuantityPerUnit" class="form-control" />
        <span asp-validation-for="QuantityPerUnit"></span>
    </div>
    <div class="input-group-sm col-sm-3">
        <label asp-for="UnitPrice">Unit price</label>
        <input asp-for="UnitPrice" class="form-control" />
        <span asp-validation-for="UnitPrice">Unit price must be positive</span>
    </div>
    <div class="input-group-sm col-sm-3">
        <label asp-for="UnitsInStock">Units in stock</label>
        <input asp-for="UnitsInStock" class="form-control" />
        <span asp-validation-for="UnitsInStock">Units in stock must be positive</span>
    </div>
    <div class="input-group-sm col-sm-3">
        <label asp-for="UnitsOnOrder">Units on order</label>
        <input asp-for="UnitsOnOrder" class="form-control" />
        <span asp-validation-for="UnitsOnOrder">Units on order must be positive</span>
    </div>
    <div class="input-group-sm col-sm-3">
        <label asp-for="ReorderLevel">Reorder level</label>
        <input asp-for="ReorderLevel" class="form-control" />
        <span asp-validation-for="ReorderLevel">Reorder level must be positive</span>
    </div>
    <div class="input-group-sm col-sm-3">
        <label asp-for="Discontinued"></label>
        <input asp-for="Discontinued" />
        <span asp-validation-for="Discontinued"></span>
    </div>
    <div class="form-group">
        <input asp-for="ProductID" type="hidden" />
        <input type="submit" name="save" class="btn btn-primary btn-lg" value="Submit" />
    </div>
</form>
