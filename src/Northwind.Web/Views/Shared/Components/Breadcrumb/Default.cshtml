@model BreadcrumbItem

<ol class="breadcrumb mr-auto" style="height: 20px; padding-top: 5px">
    <li class="breadcrumb-item">
        <a asp-controller="Home" asp-action="Index" class="text-light">Home</a>
    </li>
    @if (Model.Action != "Index")
    {
        <li class="breadcrumb-item">
            <a asp-controller="@Model.Controller" asp-action="Index" class="text-light">@Model.Controller</a>
        </li>
        <li class="breadcrumb-item active">
            @Model.Action
        </li>
    }
    else
    {
        <li class="breadcrumb-item active">
            @Model.Controller
        </li>
    }
</ol>