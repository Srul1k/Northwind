<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Northwind</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="mySidebar" class="sidebar">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
        <a class="nav-link text-dark" asp-controller="Categories" asp-action="Index"><h5>Categories</h5></a>
        <a class="nav-link text-dark" asp-controller="Products" asp-action="Index"><h5>Products</h5></a>
    </div>

    <div>
        <nav class="navbar">
            <button class="navbar-toggler navbar-dark" type="button" onclick="openNav()">
                <span class="navbar-toggler-icon"></span>
            </button>
            @if (User.Identity.IsAuthenticated)
            {
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <input type="submit" class="btn btn-lg" style="color: white" value="Logout" />
                </form>
            }
            else
            {
                <div class="container-fluid fixed-top justify-content-end">
                    <a class="btn btn-lg" style="color: white; padding-top: 18px" asp-controller="Account" asp-action="Login">Login</a>
                    <a class="btn btn-lg" style="color: white; padding-top: 18px" asp-controller="Account" asp-action="Register">Register</a>
                </div>
            }
        </nav>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Northwind
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
