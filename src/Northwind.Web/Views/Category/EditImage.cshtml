@model Category
@{
    ViewData["Title"] = "Edit image";
}
<h2>@ViewData["Title"]</h2>

<form method="post" enctype="multipart/form-data">
    <div>
        <label>@Model.CategoryName</label>
    </div>
    <img src="@Url.Action("GetImage", new { id=Model.CategoryID})" style="width:78px;height:78px;" />
    <div class="input-group-sm col-sm-4">
        <input type="file" name="uploadedFile" class="form-control" />
    </div>
    <div>
        <input type="hidden" asp-for="CategoryID" />
        <input type="hidden" asp-for="CategoryName" />
        <input type="hidden" asp-for="Description" />
        <input type="submit" value="Replace" class="btn btn-outline-secondary" />
    </div>
</form>
